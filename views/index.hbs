<script src="/javascripts/index.js" charset="utf-8"></script>
<link rel="stylesheet" href="/stylesheets/index.css">
<div id="sliderDiv" class="grey lighten-4 sliderDiv">
  <div class="container">
    <div class="slider">
      <ul class="slides">
        {{#each stadiumSlider}}
        <li>
          <img src={{this.image}}> <!-- random image -->
          <div class="caption {{this.align}}">
            <h3>{{this.name}}</h3>
            <h5>{{this.location}}</h4>
            <h5 class="light grey-text text-lighten-3">{{this.league}}</h5>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
